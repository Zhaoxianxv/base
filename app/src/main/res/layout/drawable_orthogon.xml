<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <com.yfy.view.SQToolBar style="@style/App_SQToolbar"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:shrinkColumns="1,2"
            android:stretchColumns="2"
            android:orientation="vertical">
            <TableRow
                android:layout_marginTop="@dimen/margin_10dp"
                android:layout_height="@dimen/margin_120dp">
                <ImageView
                    android:layout_width="@dimen/margin_100dp"
                    android:layout_height="@dimen/margin_100dp"
                    android:layout_marginLeft="@dimen/margin_20dp"
                    android:src="@drawable/drawable_orthogon"
                    />
                <TextView
                    android:layout_width="@dimen/margin_50dp"
                    android:layout_height="match_parent"
                    android:text="@string/drawable_orthogon_describe"
                    android:layout_gravity="center_vertical"
                    android:gravity="center"
                    android:layout_marginLeft="@dimen/margin_30dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="试了下 TableLayout:shrinkColumns/stretchColumns"
                    android:layout_gravity="center_vertical"
                    android:gravity="center"
                    android:padding="@dimen/margin_3dp"
                    android:layout_marginLeft="@dimen/margin_30dp"/>
            </TableRow>
            <TableRow
                android:layout_marginTop="@dimen/margin_10dp">
                <ImageView
                    android:layout_width="@dimen/margin_100dp"
                    android:layout_height="@dimen/margin_100dp"
                    android:layout_marginLeft="@dimen/margin_20dp"
                    android:src="@drawable/drawable_shape_line"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="shape属性：android:shape=line:stroke 边线"
                    android:layout_gravity="center_vertical"
                    android:gravity="center"
                    android:layout_marginLeft="@dimen/margin_30dp"/>
            </TableRow>
            <TableRow
                android:layout_marginTop="@dimen/margin_10dp">
                <ImageView
                    android:layout_width="@dimen/margin_50dp"
                    android:layout_height="@dimen/margin_100dp"
                    android:layout_marginLeft="@dimen/margin_10dp"
                    android:src="@drawable/gradient_rectangle_315"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="angle=integer: centerX=integer:centerY=integer ：centerColor=integer：endColor=color :gradientRadius=integer:startColor=color :type=[linear| radial | sweep] :useLevel=[true | false]"
                    android:textSize="@dimen/textsize2"
                    android:layout_gravity="center_vertical"
                    android:gravity="center"
                    android:layout_marginLeft="@dimen/margin_30dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="gradient:(type=linear angle有用)angle=90,"
                    android:layout_gravity="center_vertical"
                    android:gravity="center"
                    android:textSize="@dimen/textsize3"
                    android:layout_marginLeft="@dimen/margin_30dp"/>
            </TableRow>
            <TableRow
                android:layout_marginTop="@dimen/margin_10dp">
                <ImageView
                    android:layout_width="@dimen/margin_50dp"
                    android:layout_height="@dimen/margin_100dp"
                    android:layout_marginLeft="@dimen/margin_10dp"
                    android:src="@drawable/drawable_shape_ring"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="shape属性：\t android: \t shape= oval "
                    android:layout_gravity="center_vertical"
                    android:gravity="center"
                    android:layout_marginLeft="@dimen/margin_30dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="shape= oval \t shape=rectangle (长方形) \t "
                    android:layout_gravity="center_vertical"
                    android:gravity="center"
                    android:layout_marginLeft="@dimen/margin_30dp"/>
            </TableRow>
        </TableLayout>
    </ScrollView>

</LinearLayout>
