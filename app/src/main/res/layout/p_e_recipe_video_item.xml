<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="@dimen/margin_120dp"
    >


    <ImageView
        android:id="@+id/video_play_icon"
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_120dp"
        android:background="@drawable/radius3_white"/>
    <ImageView
        android:id="@+id/video_play_button"
        android:layout_width="@dimen/margin_50dp"
        android:layout_height="@dimen/margin_50dp"
        android:layout_centerInParent="true"
        android:src="@drawable/ic_arrow_play_right_black_24dp"
        />
    <TextView
        android:id="@+id/video_play_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:textColor="@color/White"
        android:textSize="@dimen/textsize5"
        android:layout_margin="@dimen/margin_5dp"/>

</RelativeLayout>