<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/White"
    android:id="@+id/duty_evaluate_normal_item_layout"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.gridlayout.widget.GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        app:alignmentMode="alignBounds"
        app:orientation="horizontal"
        app:useDefaultMargins="false">


        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/duty_evaluate_normal_item_title"
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_35dp"
            app:layout_row="0"
            app:layout_column="0"
            android:text="月份"
            android:background="@color/LightPink"


            android:gravity="center"
            android:textSize="@dimen/textsize7"/>


        <ProgressBar
            android:id="@+id/duty_evaluate_normal_item_progress"
            android:layout_width="match_parent"
            android:layout_height="15dp"
            app:layout_row="2"
            app:layout_column="0"
            android:max="3"
            android:progress="2"
            android:secondaryProgress="1"
            android:minHeight="@dimen/margin_8dp"
            android:maxHeight="@dimen/margin_8dp"
            android:progressDrawable="@drawable/progressbar"
            android:progressTint="@color/PaleGodenrod"
            android:progressTintMode="src_over"
            android:layout_centerInParent="true"
            android:background="@color/transparent"
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
            />







    </androidx.gridlayout.widget.GridLayout>


</RelativeLayout>