<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="@color/WhiteSmoke"
	>
	
	<com.yfy.view.SQToolBar style="@style/App_SQToolbar"/>
	<RelativeLayout
		android:id="@+id/layout_gold"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginTop="@dimen/margin_45dp"
		android:background="@color/Gainsboro"
		android:minHeight="@dimen/margin_45dp"
		>

		<RelativeLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:background="@color/White"
			android:layout_marginTop="@dimen/margin_5dp"
			android:layout_marginBottom="@dimen/margin_5dp"
			>
			<TextView
				android:id="@+id/tv_title_gold_main"
				android:layout_width="wrap_content"
				android:layout_height="@dimen/margin_20dp"
				android:text="@string/title"
				android:layout_marginStart="@dimen/margin_10dp"
				android:gravity="center_vertical"
				android:textSize="@dimen/textsize7"
				android:textStyle="bold"
				android:layout_marginTop="@dimen/margin_3dp"
				/>

			<TextView
				android:id="@+id/tv_content_gold_main"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:text=""
				android:layout_marginTop="@dimen/margin_25dp"
				android:minHeight="@dimen/margin_30dp"
				android:background="@color/White"
				android:gravity="start"
				android:textSize="@dimen/textsize7"
				android:paddingLeft="@dimen/margin_10dp"
				android:paddingRight="@dimen/margin_10dp"
				android:paddingBottom="@dimen/margin_5dp"
				/>

		</RelativeLayout>


	</RelativeLayout>
	
	<androidx.recyclerview.widget.RecyclerView
		android:id="@+id/public_recycler"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:layout_below="@id/layout_gold"
		>
	</androidx.recyclerview.widget.RecyclerView>
</RelativeLayout>

