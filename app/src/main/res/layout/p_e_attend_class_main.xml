<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/WhiteSmoke">

    <com.yfy.view.SQToolBar style="@style/App_SQToolbar"/>



    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_5dp"
        android:layout_marginRight="@dimen/margin_8dp"

        android:minHeight="@dimen/margin_45dp"
        android:layout_marginTop="@dimen/margin_10dp"
        app:cardCornerRadius="@dimen/margin_5dp"
        app:cardBackgroundColor="@color/white">

        <RelativeLayout
            android:layout_margin="@dimen/margin_5dp"
            android:layout_width="match_parent"
            android:minHeight="@dimen/margin_45dp"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/p_e_attend_class_title"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/margin_20dp"
                android:layout_marginLeft="@dimen/margin_10dp"
                android:gravity="center_vertical"
                android:textSize="@dimen/textsize7"
                android:layout_centerVertical="true"
                android:textStyle="bold"
                android:text="小结"
                android:layout_marginTop="@dimen/margin_3dp"/>

        </RelativeLayout>

    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_5dp"
        android:layout_marginRight="@dimen/margin_8dp"
        android:layout_marginBottom="@dimen/margin_8dp"
        android:minHeight="@dimen/margin_45dp"
        android:layout_marginTop="@dimen/margin_5dp"
        app:cardCornerRadius="@dimen/margin_5dp"
        app:cardBackgroundColor="@color/white">

        <RelativeLayout
            android:layout_margin="@dimen/margin_5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.yfy.charting_mp.charts.BarChart
                android:id="@+id/p_e_attend_class_chart"
                android:layout_width="match_parent"
                android:layout_height="300dp" />
        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>