<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	xmlns:tools="http://schemas.android.com/tools"
	android:background="@color/White"
	tools:ignore="RelativeOverlap"
	android:id="@+id/relative_layout_people_public"
	android:paddingTop="@dimen/margin_3dp"
	android:paddingBottom="@dimen/margin_3dp"
	>
	<androidx.appcompat.widget.AppCompatImageView
		android:id="@+id/head_iv_people_public"
		android:layout_width="@dimen/margin_50dp"
		android:layout_height="@dimen/margin_50dp"
		android:layout_marginTop="@dimen/margin_5dp"
		android:layout_marginBottom="@dimen/margin_5dp"
		android:src="@drawable/oval_gray"
		android:layout_marginLeft="@dimen/margin_10dp"
		android:layout_marginRight="@dimen/margin_10dp"/>
	<androidx.appcompat.widget.AppCompatTextView
		android:id="@+id/title_tv_people_public"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text=""
		tools:text="@string/app_name"
		android:layout_marginStart="@dimen/margin_10dp"
		android:layout_toEndOf="@id/head_iv_people_public"
		android:textSize="@dimen/textsize9"
		/>
	
	
	<androidx.appcompat.widget.AppCompatTextView
		android:id="@+id/sub_title_tv_people_public"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text=""
		tools:text="service"
		android:gravity="center"
		android:layout_below="@id/title_tv_people_public"
		android:layout_marginStart="@dimen/margin_10dp"
		android:layout_toEndOf="@id/head_iv_people_public"
		android:textColor="@color/base_color"
		android:textSize="@dimen/textsize6"
		/>
	
	
	<androidx.appcompat.widget.AppCompatTextView
		android:id="@+id/content_tv_people_public"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:text=""
		tools:text="end"
		android:layout_below="@id/sub_title_tv_people_public"
		android:layout_marginStart="@dimen/margin_10dp"
		android:textColor="@color/DarkGray"
		android:layout_toEndOf="@id/head_iv_people_public"
		android:textSize="@dimen/textsize6"
		/>
	
	<androidx.appcompat.widget.AppCompatTextView
		android:id="@+id/state_tv_people_public"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		tools:text="end"
		android:layout_alignParentEnd="true"
		android:layout_centerVertical="true"
		android:layout_marginEnd="@dimen/margin_10dp"
		android:textColor="@color/orange"
		/>
</RelativeLayout>