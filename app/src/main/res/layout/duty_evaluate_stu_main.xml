<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#f7f8f9"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    
    >
    
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:fitsSystemWindows="true"
        >
        <!--contentScrim 改变后的颜色/ -->
        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:id="@+id/answer_collapsing"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            app:contentScrim="@color/app_base_color"
            app:layout_scrollFlags="scroll|exitUntilCollapsed">
            <!--                     app:layout_collapseParallaxMultiplier="0.7"-->
            <!--                app:layout_collapseMode="parallax"-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_collapseParallaxMultiplier="0.7"
                app:layout_collapseMode="parallax"
                >
                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/duty_evaluate_bg"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@mipmap/rank_five"
                    android:scaleType="centerCrop"
                    />
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="160dp"
                        android:layout_marginStart="@dimen/margin_40dp"
                        android:layout_marginEnd="@dimen/margin_40dp"
                        android:layout_marginTop="120dp"
                        android:layout_marginBottom="@dimen/margin_1dp"
                        app:cardCornerRadius="@dimen/margin_8dp"
                        app:cardElevation="@dimen/margin_10dp"
                        app:cardBackgroundColor="@color/blue"
                        >
                        <androidx.appcompat.widget.AppCompatImageView
                            android:id="@+id/card_background"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/gradient_rectangle_315"
                            />
                        <androidx.appcompat.widget.AppCompatImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/radius5_line_white"
                            android:layout_margin="7dp"/>
                    </androidx.cardview.widget.CardView>
                </RelativeLayout>
                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/duty_evaluate_stu_head"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_marginTop="@dimen/margin_40dp"
                    android:layout_centerHorizontal="true"
                    android:scaleType="centerInside"
                    android:src="@mipmap/honor_five"/>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentBottom="true"
                    >
      
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:orientation="horizontal">
                        <androidx.appcompat.widget.AppCompatImageView
                            android:id="@+id/duty_evaluate_bottom_left_bg"
                            android:layout_width="0dp"
                            android:layout_height="90dp"
                            android:layout_weight="1"
                            android:background="@drawable/ic_triangle_left_one_24dp"
                            android:backgroundTint="@color/orange"
                            android:src="@drawable/ic_triangle_left_24dp"
                            android:tint="@color/White"
                            android:scaleType="fitXY"
                            />
                        <androidx.appcompat.widget.AppCompatImageView
                            android:id="@+id/duty_evaluate_bottom_right_bg"
                            android:layout_width="0dp"
                            android:layout_height="90dp"
                            android:layout_weight="1"
                            android:background="@drawable/ic_triangle_right_one_24dp"
                            android:backgroundTint="@color/orange"
                            android:src="@drawable/ic_triangle_right_24dp"
                            android:tint="@color/White"
                            android:scaleType="fitXY"
                            />
                    </LinearLayout>
    
                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/duty_evaluate_stu_rank"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        tools:text="s"
                        android:gravity="center"
                        android:textColor="@color/app_base_color"
                        android:textSize="@dimen/textsize9"
                        android:layout_alignParentBottom="true"
                        android:paddingBottom="@dimen/margin_40dp"
                        />
    
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/margin_5dp"
                        android:background="@color/White"
                        android:layout_alignParentBottom="true"/>
                </RelativeLayout>
            </RelativeLayout>
            
            <androidx.appcompat.widget.Toolbar
                android:id="@+id/tool_bar"
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin_45dp"
                app:contentInsetStart="0dp"
                app:layout_collapseMode="pin" >
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/margin_45dp">
                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/main_navi"
                        android:layout_width="@dimen/margin_45dp"
                        android:layout_height="@dimen/margin_45dp"
                        android:padding="@dimen/margin_5dp"
                        app:srcCompat="@drawable/ic_navi_back"
                        app:tint="@color/White"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        />
                </RelativeLayout>
            </androidx.appcompat.widget.Toolbar>
        </com.google.android.material.appbar.CollapsingToolbarLayout>
    </com.google.android.material.appbar.AppBarLayout>
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#f7f8f9"
        android:scrollbars="none"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        >
        
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin_45dp"
                android:background="@color/White"
                android:layout_marginTop="@dimen/margin_15dp"
                >
                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="5dp"
                    android:layout_height="20dp"
                    android:layout_centerVertical="true"
                    android:background="#E7C28E"
                    android:layout_marginStart="@dimen/margin_10dp"
                    />
                <androidx.appcompat.widget.AppCompatTextView
                    android:text="常规性评价"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:layout_centerVertical="true"
                    android:textColor="@color/app_base_text_color"
                    android:layout_marginStart="@dimen/margin_25dp"
            
            
                    />
        
                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/stu_select_date"
                    tools:text="2021/01"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="@dimen/margin_10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/margin_5dp"
                    android:textSize="@dimen/textsize6"
                    android:gravity="center"
                    android:layout_centerVertical="true"
                    android:textColor="@color/app_base_text_color"
                    />
            </RelativeLayout>
    
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/margin_5dp"
                android:paddingRight="@dimen/margin_5dp"
                android:background="@color/White"
                
                >
                <WebView
                    android:id="@+id/event_chart_web_view"
                    android:layout_width="match_parent"
                    android:layout_height="320dp"
                    android:visibility="visible"
                    android:layout_marginEnd="@dimen/margin_5dp"
                    android:layout_marginStart="@dimen/margin_5dp"
                    android:scrollbars="none" />
            </FrameLayout>
    
    
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/White"
                android:paddingTop="@dimen/margin_10dp"
                >

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/margin_05dp"
                    android:layout_marginStart="@dimen/margin_10dp"
                    android:layout_marginEnd="@dimen/margin_10dp"
                    android:background="@color/gray"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/margin_05dp"
                    android:layout_marginStart="@dimen/margin_10dp"
                    android:layout_marginEnd="@dimen/margin_10dp"
                    android:layout_alignParentBottom="true"
                    android:background="@color/gray"/>
        
                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/duty_evaluate_stu_normal_title"
                    tools:text="排名：23名"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/margin_20dp"
                    android:textSize="@dimen/textsize10"
                    android:textColor="@color/app_base_text_color"
            
                    />
                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/duty_evaluate_stu_normal_value"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    tools:text="获得雅币 0 枚"
                    android:layout_alignParentEnd="true"
                    android:gravity="center"
                    android:layout_marginEnd="@dimen/margin_20dp"
                    android:textColor="@color/DarkGray"
                    android:textSize="@dimen/textsize8"
                    />
    
            </RelativeLayout>
            
            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/White"
                android:stretchColumns="0,1">
                <TableRow>
            
                    <androidx.cardview.widget.CardView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="80dp"
                        android:layout_margin="@dimen/margin_10dp"
                        app:cardCornerRadius="@dimen/margin_8dp"
                   
                
                        >
                        <androidx.appcompat.widget.AppCompatImageView
                            android:id="@+id/stu_self_event_bg"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/gradient_rectangle_two_315"
                            />
                
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                            <androidx.appcompat.widget.AppCompatImageView
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                app:srcCompat="@mipmap/fail"
                                android:layout_centerVertical="true"
                                android:layout_marginStart="@dimen/margin_5dp"
                                android:padding="@dimen/margin_3dp"
                                app:tint="@color/Crimson"
                                />
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="@dimen/margin_5dp"
                                android:layout_centerVertical="true"
                                android:layout_marginStart="60dp"
                                android:orientation="vertical">
                                <androidx.appcompat.widget.AppCompatTextView
                                    android:id="@+id/duty_span_stu"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    tools:text="学生自评"
                                    android:gravity="start"
                                    android:textSize="@dimen/textsize9"
                                    android:textStyle="bold"
                                    android:textColor="@color/White"
                                    />
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="STUDENT"
                                    android:textSize="@dimen/textsize12"
                                    android:textStyle="bold"
                                    android:gravity="end"
                                    android:textColor="@color/White"
                                    android:alpha="0.3"
                                    />
                            </LinearLayout>
                
                        </RelativeLayout>
                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="80dp"
                        android:layout_margin="@dimen/margin_10dp"
                        app:cardCornerRadius="@dimen/margin_8dp"
                
                
                        >
                        <androidx.appcompat.widget.AppCompatImageView
                            android:id="@+id/tea_event_bg"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/gradient_rectangle_one_315"
                            />
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                            <androidx.appcompat.widget.AppCompatImageView
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                app:srcCompat="@mipmap/success"
                                android:layout_centerVertical="true"
                                android:layout_marginStart="@dimen/margin_5dp"
                                android:padding="3dp"
                                app:tint="@color/LawnGreen"
                                />
                    
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="@dimen/margin_5dp"
                                android:layout_centerVertical="true"
                                android:layout_marginStart="60dp"
                                android:orientation="vertical">
                                <androidx.appcompat.widget.AppCompatTextView
                                    android:id="@+id/duty_span_family"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    tools:text="家长评价"
                                    android:gravity=""
                                    android:textSize="@dimen/textsize9"
                                    android:textColor="@color/White"
                                    android:textStyle="bold"
                            
                                    />
                                <androidx.appcompat.widget.AppCompatTextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="PARENT"
                                    android:textSize="@dimen/textsize12"
                                    android:textStyle="bold"
                                    android:gravity="end"
                                    android:textColor="@color/White"
                                    android:alpha="0.3"
                                    />
                            </LinearLayout>
                        </RelativeLayout>
            
                    </androidx.cardview.widget.CardView>
        
                </TableRow>
    
            </TableLayout>
    
    
    
    
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_15dp"
                android:background="#f7f8f9">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/margin_45dp"
                    android:background="@color/White"
                    >
                    <androidx.appcompat.widget.AppCompatImageView
                        android:layout_width="5dp"
                        android:layout_height="20dp"
                        android:layout_centerVertical="true"
                        android:background="#E7C28E"
                        android:layout_marginStart="@dimen/margin_10dp"
                        />
                    <androidx.appcompat.widget.AppCompatTextView
                        android:text="发展性评价"
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:layout_centerVertical="true"
                        android:textColor="@color/app_base_text_color"
                        android:layout_marginStart="@dimen/margin_25dp"
                        />
                    
                    <TextView
                        android:id="@+id/labour_score_value"
                        tools:text="120分3雅币"
                        android:layout_alignParentEnd="true"
                        android:layout_marginEnd="@dimen/margin_10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/textsize6"
                        android:gravity="center"
                        android:layout_centerVertical="true"
                        android:textColor="@color/app_base_text_color"
                        />
                </RelativeLayout>
                
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/White"
                    android:visibility="visible"
                    android:layout_marginTop="@dimen/margin_45dp">
                    
                    <RelativeLayout
                        android:id="@+id/develop_school_in_layout"
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        >
                        
                        <androidx.appcompat.widget.AppCompatImageView
                            android:layout_width="@dimen/margin_60dp"
                            android:layout_height="@dimen/margin_60dp"
                            android:src="@mipmap/daochu"
                            android:padding="@dimen/margin_15dp"
                            android:tint="@color/MediumTurquoise"
                            android:layout_centerVertical="true"
                            />
                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/develop_school_in_title"
                            tools:text="校内活动"
                            android:layout_width="wrap_content"
                            android:layout_height="40dp"
                            android:gravity="bottom"
                            android:textStyle="bold"
                            android:textSize="@dimen/textsize7"
                            android:textColor="@color/app_base_text_color"
                            android:layout_marginStart="@dimen/margin_60dp"
                            />
                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/develop_school_in_title_sub"
                            android:text="校内活动（10/20）"
                            android:layout_width="wrap_content"
                            android:layout_height="40dp"
                            android:gravity="top"
                            android:textSize="@dimen/textsize5"
                            android:textColor="@color/gray_text"
                            android:textStyle="bold"
                            android:layout_marginStart="@dimen/margin_60dp"
                            android:layout_alignParentBottom="true"
                            />
                        <androidx.appcompat.widget.AppCompatTextView
                            android:text="去登记"
                            android:layout_width="wrap_content"
                            android:layout_height="30dp"
                            android:textSize="@dimen/textsize6"
                            android:gravity="center"
                            android:layout_centerVertical="true"
                            android:layout_alignParentEnd="true"
                            android:layout_marginEnd="@dimen/margin_10dp"
                            android:background="@drawable/rectangle_radius_oval_white"
                            android:textColor="@color/White"
                            android:paddingLeft="@dimen/margin_15dp"
                            android:paddingRight="@dimen/margin_15dp"
                            android:backgroundTint="#E7C28E"
                            />
                    </RelativeLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/margin_05dp"
                        android:layout_marginStart="@dimen/margin_20dp"
                        android:layout_marginEnd="@dimen/margin_10dp"
                        android:background="@color/Gainsboro"/>
                    <RelativeLayout
                        android:id="@+id/develop_school_out_layout"
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        >
                        
                        <androidx.appcompat.widget.AppCompatImageView
                            android:layout_width="@dimen/margin_60dp"
                            android:layout_height="@dimen/margin_60dp"
                            android:src="@mipmap/praise"
                            android:tint="@color/SandyBrown"
                            android:padding="@dimen/margin_15dp"
                            android:layout_centerVertical="true"
                            />
                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/develop_school_out_title"
                            tools:text="校外实践"
                            android:layout_width="wrap_content"
                            android:layout_height="40dp"
                            android:gravity="bottom"
                            android:textStyle="bold"
                            android:textSize="@dimen/textsize7"
                            android:textColor="@color/app_base_text_color"
                            android:layout_marginStart="@dimen/margin_60dp"
                            />
                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/develop_school_out_title_sub"
                            tools:text="校内活动（10/20）"
                            android:layout_width="wrap_content"
                            android:layout_height="40dp"
                            android:gravity="top"
                            android:textSize="@dimen/textsize5"
                            android:textColor="@color/gray_text"
                            android:textStyle="bold"
                            android:layout_marginStart="@dimen/margin_60dp"
                            android:layout_alignParentBottom="true"
                            />
                        <androidx.appcompat.widget.AppCompatTextView
                            android:text="去登记"
                            android:layout_alignParentEnd="true"
                            android:layout_marginEnd="@dimen/margin_10dp"
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/margin_30dp"
                            android:textSize="@dimen/textsize6"
                            android:gravity="center"
                            android:layout_centerVertical="true"
                            android:background="@drawable/rectangle_radius_oval_white"
                            android:textColor="@color/White"
                            android:paddingLeft="@dimen/margin_15dp"
                            android:paddingRight="@dimen/margin_15dp"
                            android:backgroundTint="#E7C28E"
                            />
                    </RelativeLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/margin_05dp"
                        android:layout_marginStart="@dimen/margin_20dp"
                        android:layout_marginEnd="@dimen/margin_10dp"
                        android:background="@color/Gainsboro"/>
                    <RelativeLayout
                        android:id="@+id/develop_school_score_layout"
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        >
                        
                        <androidx.appcompat.widget.AppCompatImageView
                            android:layout_width="@dimen/margin_60dp"
                            android:layout_height="@dimen/margin_60dp"
                            android:src="@mipmap/icon_txt"
                            android:tint="@color/Brown"
                            android:padding="@dimen/margin_15dp"
                            android:layout_centerVertical="true"
    
                            />
                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/develop_school_score_title"
                            tools:text="比赛成绩（10/20）"
                            android:layout_width="wrap_content"
                            android:layout_height="40dp"
                            android:gravity="bottom"
                            android:textStyle="bold"
                            android:textSize="@dimen/textsize7"
                            android:textColor="@color/app_base_text_color"
                            android:layout_marginStart="@dimen/margin_60dp"
                            />
    
                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/develop_school_score_title_sub"
                            android:layout_width="wrap_content"
                            android:layout_height="40dp"
                            android:layout_alignParentBottom="true"
                            android:layout_marginStart="@dimen/margin_60dp"
                            android:gravity="top"
                            tools:text="校内活动（10/20）"
                            android:textColor="@color/gray_text"
                            android:textSize="@dimen/textsize5"
                            android:textStyle="bold" />
                        <androidx.appcompat.widget.AppCompatTextView
                            android:text="去登记"
                            android:layout_alignParentEnd="true"
                            android:layout_marginEnd="@dimen/margin_10dp"
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/margin_30dp"
                            android:textSize="@dimen/textsize6"
                            android:gravity="center"
                            android:layout_centerVertical="true"
                            android:background="@drawable/rectangle_radius_oval_white"
                            android:textColor="@color/White"
                            android:paddingLeft="@dimen/margin_15dp"
                            android:paddingRight="@dimen/margin_15dp"
                            android:backgroundTint="#E7C28E"
                            />
                    </RelativeLayout>
                
                </LinearLayout>
            
            </RelativeLayout>
            <RelativeLayout
                
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_15dp"
                android:layout_marginBottom="@dimen/margin_60dp"
                android:background="@color/White"
                >
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/margin_45dp"
                    >
                    
                    <androidx.appcompat.widget.AppCompatImageView
                        android:layout_width="5dp"
                        android:layout_height="20dp"
                        android:layout_centerVertical="true"
                        android:background="#E7C28E"
                        android:layout_marginStart="@dimen/margin_10dp"
                        />
                    <androidx.appcompat.widget.AppCompatTextView
                        android:text="补充性评价"
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:layout_centerVertical="true"
                        android:textColor="@color/app_base_text_color"
                        android:layout_marginStart="@dimen/margin_25dp"
                        
                        
                        />
                    
                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/replenish_term_name"
                        tools:text="第五期"
                        android:layout_alignParentEnd="true"
                        android:layout_marginEnd="@dimen/margin_10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/textsize6"
                        android:layout_centerVertical="true"
                        android:textColor="@color/app_base_text_color"
                        />
                </RelativeLayout>
                
                <LinearLayout
                    android:orientation="vertical"
