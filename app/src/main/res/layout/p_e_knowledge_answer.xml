<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <com.yfy.view.SQToolBar style="@style/App_SQToolbar"/>

    <RelativeLayout
        android:layout_marginTop="@dimen/margin_45dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/knowledge_answer_bottom"
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_45dp"
            android:layout_alignParentBottom="true"
            android:visibility="gone"
            android:background="@color/app_base_color">

        </RelativeLayout>

        <android.support.v4.view.ViewPager
            android:id="@+id/knowledge_answer_pager"
            android:layout_width="match_parent"
            android:layout_above="@id/knowledge_answer_bottom"
            android:background="@color/white"
            android:layout_height="match_parent">

        </android.support.v4.view.ViewPager>

    </RelativeLayout>
</RelativeLayout>