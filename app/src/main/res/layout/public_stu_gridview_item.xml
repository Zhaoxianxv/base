<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/layer_bottom_right_gray_line_white_bg"
    android:id="@+id/stu_grid_layout"
    >
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/stu_grid_head"
        android:layout_width="@dimen/margin_50dp"
        android:layout_height="@dimen/margin_50dp"
        android:layout_marginTop="@dimen/margin_5dp"
        android:layout_marginBottom="@dimen/margin_5dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/radius_oval_gray"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/stu_grid_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/stu_grid_head"

        android:textSize="@dimen/textsize5"
        android:layout_centerHorizontal="true"
        tools:text="张三李四"
        />
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/stu_grid_state"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/stu_grid_name"
        android:textSize="@dimen/textsize4"
        android:layout_centerHorizontal="true"
        android:paddingBottom="@dimen/margin_5dp"
        android:gravity="center"
        android:text="张三李四"
        />
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/stu_grid_select"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/gray"
        android:layout_margin="@dimen/margin_5dp"
        android:layout_alignBottom="@id/stu_grid_state"
        android:layout_alignParentTop="true"
        android:alpha="0.5"
        />

</RelativeLayout>
