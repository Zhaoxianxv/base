<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/p_e_honor_item_layout">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="@dimen/margin_90dp"
        android:layout_marginLeft="@dimen/margin_5dp"
        android:layout_marginTop="@dimen/margin_8dp"
        android:layout_marginRight="@dimen/margin_8dp"
        android:layout_marginBottom="@dimen/margin_8dp"
        app:cardCornerRadius="@dimen/margin_5dp"
        app:cardBackgroundColor="@color/white">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:id="@+id/p_e_honor_radio_group"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/radius4_line"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="@dimen/margin_5dp"
                    android:layout_height="wrap_content">
                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/p_e_honor_right_state"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/margin_25dp"
                        android:text="已通过"
                        android:gravity="center"
                        android:minWidth="@dimen/margin_60dp"
                        android:textColor="@color/red"
                        android:textSize="@dimen/textsize5"/>
                    <View
                        android:id="@+id/p_e_honor_right_line"
                        android:layout_width="@dimen/margin_1dp"
                        android:layout_height="@dimen/margin_25dp"
                        android:layout_alignParentRight="true"
                        android:background="@color/red"
                        />
                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/p_e_honor_right_score"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/margin_25dp"
                        android:text="15分"
                        android:minWidth="@dimen/margin_60dp"
                        android:gravity="center"
                        android:textColor="@color/red"
                        android:textSize="@dimen/textsize5"/>
                </LinearLayout>
                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/p_e_honor_left_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_10dp"
                    android:layout_toLeftOf="@id/p_e_honor_radio_group"
                    android:layout_marginTop="@dimen/margin_3dp"
                    android:layout_marginRight="@dimen/margin_5dp"
                    android:text="事由"
                    android:textSize="@dimen/textsize9"
                    app:autoSizeTextType="uniform"/>
            </RelativeLayout>

            <TextView
                android:id="@+id/p_e_honor_left_sub_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="时间·"
                android:textColor="@color/app_base_text_color"
                android:textSize="@dimen/textsize5"
                android:visibility="gone"
                android:layout_marginTop="@dimen/margin_3dp"
                android:layout_marginLeft="@dimen/margin_10dp"/>
            <TextView
                android:id="@+id/p_e_honor_left_sub"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="时间·"
                android:textColor="@color/oranges"
                android:textSize="@dimen/textsize5"
                android:layout_marginTop="@dimen/margin_3dp"
                android:layout_marginLeft="@dimen/margin_10dp"/>



            <TextView
                android:id="@+id/p_e_honor_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="时间·"
                android:textSize="@dimen/textsize5"
                android:layout_marginTop="@dimen/margin_3dp"
                android:layout_marginLeft="@dimen/margin_10dp"/>


            <com.yfy.view.multi.MultiPictureView
                android:id="@+id/p_e_honor_item_multi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="@dimen/margin_5dp"
                android:layout_marginRight="@dimen/margin_5dp"
                android:layout_marginBottom="@dimen/margin_5dp"
                app:imageLayoutMode="STATIC"
                app:max="9"
                app:ratio="1"
                app:space="6dp"
                app:span="5"
                />
        </LinearLayout>

    </androidx.cardview.widget.CardView>


</RelativeLayout>