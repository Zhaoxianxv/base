<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/p_e_score_item_layout">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_5dp"
        android:layout_marginTop="@dimen/margin_8dp"
        android:layout_marginRight="@dimen/margin_8dp"
        android:layout_marginBottom="@dimen/margin_8dp"
        android:minHeight="@dimen/margin_45dp"
        app:cardCornerRadius="@dimen/margin_5dp"
        app:cardBackgroundColor="@color/White">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/p_e_score_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_10dp"
                android:layout_marginTop="@dimen/margin_5dp"
                android:layout_marginRight="@dimen/margin_5dp"
                android:text="事由"
                android:textSize="@dimen/textsize9"
                app:autoSizeTextType="uniform"/>

            <LinearLayout
                android:id="@+id/p_e_score_layout"
                android:layout_marginLeft="@dimen/margin_10dp"
                android:background="@drawable/radius4_radio_group"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_marginTop="@dimen/margin_5dp"
                android:layout_height="wrap_content">
                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/p_e_score_num"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/margin_25dp"
                    android:text="已通过"
                    android:gravity="center"
                    android:minWidth="@dimen/margin_50dp"
                    android:textColor="@color/red"
                    android:layout_marginLeft="@dimen/margin_5dp"
                    android:textSize="@dimen/textsize5"/>
                <View
                    android:layout_width="@dimen/margin_1dp"
                    android:layout_height="@dimen/margin_25dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="@dimen/margin_5dp"
                    android:layout_marginRight="@dimen/margin_5dp"
                    android:background="@color/red"
                    />
                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/p_e_score_weight"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/margin_25dp"
                    android:text="15分"
                    android:layout_marginRight="@dimen/margin_5dp"
                    android:minWidth="@dimen/margin_50dp"
                    android:gravity="center"
                    android:textColor="@color/red"
                    android:textSize="@dimen/textsize5"/>
            </LinearLayout>


            <TextView
                android:id="@+id/p_e_score_math"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="9"
                android:textSize="@dimen/textsize5"
                android:textColor="@color/oranges"
                android:layout_marginTop="@dimen/margin_5dp"
                android:layout_marginLeft="@dimen/margin_10dp"
                android:layout_marginBottom="@dimen/margin_5dp"/>
        </LinearLayout>

    </androidx.cardview.widget.CardView>


</LinearLayout>