<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:id="@+id/search_user_layout"
	android:layout_width="match_parent"
	android:background="@color/WhiteSmoke"
	android:layout_height="45dp">
	
	<androidx.appcompat.widget.AppCompatImageView
		android:id="@+id/search_user_head"
		android:layout_width="35dp"
		android:layout_height="35dp"
		android:layout_centerVertical="true"
		app:srcCompat="@drawable/icon_account_fill"
		android:layout_marginStart="10dp"
		android:contentDescription="@string/app_name" />
	
	<androidx.appcompat.widget.AppCompatTextView
		android:id="@+id/search_user_name"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_centerVertical="true"
		android:layout_marginStart="10dp"
		android:layout_toEndOf="@id/search_user_head"
		android:singleLine="true"
		tools:text="@string/app_name"
		android:textColor="@color/app_base_text_color"
		android:textSize="14sp" />
	
	<androidx.appcompat.widget.AppCompatImageView
		android:id="@+id/search_user_check"
		android:layout_width="@dimen/margin_45dp"
		android:layout_height="match_parent"
		android:layout_alignParentEnd="true"
		android:scaleType="center"
		android:src="@drawable/ic_circle"
		android:tint="@color/base_color"
		android:layout_centerInParent="true"
		/>
</RelativeLayout>