<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/p_e_score_item_layout">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_50dp"
        android:layout_margin="@dimen/margin_5dp"
        app:cardCornerRadius="@dimen/margin_5dp"
        app:cardBackgroundColor="@color/white">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <android.support.v7.widget.AppCompatImageView
                android:id="@+id/p_e_score_icon"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_marginLeft="@dimen/margin_10dp"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_arrow_right_gray_24dp"
                android:tint="@color/main_red"
                />
            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/p_e_score_title"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/margin_10dp"
                android:layout_marginRight="@dimen/margin_5dp"
                android:layout_toRightOf="@id/p_e_score_icon"
                android:text="事由"
                android:drawableRight="@drawable/ic_arrow_right_gray_24dp"
                android:gravity="center_vertical"
                android:textSize="@dimen/textsize10"/>
        </RelativeLayout>


    </android.support.v7.widget.CardView>


</LinearLayout>