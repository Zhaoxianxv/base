<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/WhiteSmoke"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.yfy.view.SQToolBar style="@style/App_SQToolbar"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="10dp"
        android:paddingBottom="@dimen/margin_1dp"
        android:paddingTop="@dimen/margin_1dp"
        android:background="@drawable/layer_top_bottom_gray_line_white_bg">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="选择日期"
            android:layout_centerVertical="true"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:textColor="@color/base_color" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/p_e_honor_add_choose_date"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text=""
            android:gravity="right|center_vertical"
            android:textColor="@android:color/black"
            android:drawablePadding="@dimen/margin_10dp"
            android:paddingRight="@dimen/margin_10dp"
            android:drawableRight="@drawable/ic_arrow_right_gray_24dp"
            />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="10dp"
        android:paddingBottom="@dimen/margin_1dp"
        android:paddingTop="@dimen/margin_1dp"
        android:background="@drawable/layer_top_bottom_gray_line_white_bg">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="选择级别"
            android:layout_centerVertical="true"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:textColor="@color/base_color" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/p_e_honor_add_choose_course"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text=""
            android:gravity="right|center_vertical"
            android:textColor="@android:color/black"
            android:drawablePadding="@dimen/margin_10dp"
            android:paddingRight="@dimen/margin_10dp"
            android:drawableRight="@drawable/ic_arrow_right_gray_24dp"
            />
    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/layer_top_bottom_gray_line_white_bg"
        android:paddingBottom="@dimen/margin_1dp"
        android:paddingTop="@dimen/margin_1dp"
        android:layout_marginTop="@dimen/margin_10dp"
        >
        <TextView
            android:id="@+id/public_type_long_txt_edit_key"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/margin_20dp"
            android:layout_marginLeft="@dimen/margin_10dp"
            android:gravity="center_vertical"
            android:textSize="@dimen/textsize7"
            android:textStyle="bold"
            android:text="运动项目"
            android:layout_marginTop="@dimen/margin_3dp"/>

        <EditText
            android:id="@+id/public_type_long_txt_edit_value"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_25dp"
            android:minHeight="@dimen/margin_60dp"
            android:background="@color/White"
            android:hint="请填写运动项目"
            android:gravity="start"
            android:textSize="@dimen/textsize7"
            android:paddingLeft="@dimen/margin_10dp"
            android:paddingRight="@dimen/margin_10dp"
            android:paddingBottom="@dimen/margin_5dp"
            />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/layer_top_bottom_gray_line_white_bg"
        android:layout_marginTop="@dimen/margin_10dp">

        <TextView
            android:id="@+id/public_add_multi_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_10dp"
            android:layout_marginTop="@dimen/margin_3dp"
            android:textSize="@dimen/textsize7"
            android:textStyle="bold"
            android:text="获奖证书"/>
        <com.yfy.view.multi.MultiPictureView
            android:id="@+id/public_add_multi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/public_add_multi_name"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="@dimen/margin_10dp"
            app:editable="true"
            app:max="9"
            app:ratio="1"
            app:space="2dp"
            app:span="4" />


    </RelativeLayout>
</LinearLayout>