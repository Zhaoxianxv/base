<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/p_e_attitude_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/White"
    app:cardCornerRadius="@dimen/margin_5dp"
    android:layout_margin="@dimen/margin_5dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/p_e_attitude_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/textsize7"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/margin_10dp"
            android:layout_centerVertical="true"
            android:text="老师名字"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/margin_10dp"
            android:layout_marginTop="@dimen/margin_1dp"
            android:layout_marginBottom="@dimen/margin_3dp"
            android:orientation="vertical">
            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/p_e_attitude_title"
                android:layout_width="wrap_content"

                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_3dp"
                android:textSize="@dimen/textsize9"
                android:textColor="#3a3a3a"
                android:maxLines="1"
                app:autoSizeTextType="uniform"
                app:autoSizeMaxTextSize="@dimen/textsize12"
                android:text="学生名字"/>

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/p_e_attitude_sub"
                android:layout_marginTop="@dimen/margin_2dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/dark_gray"
                android:textSize="@dimen/textsize5"
                android:maxLines="1"
                app:autoSizeTextType="uniform"
                app:autoSizeMaxTextSize="@dimen/textsize12"
                android:text="2012.12.12"/>
            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/p_e_attitude_tea"
                android:layout_marginTop="@dimen/margin_2dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/dark_gray"
                android:textSize="@dimen/textsize5"
                android:maxLines="1"
                android:visibility="gone"
                app:autoSizeTextType="uniform"
                app:autoSizeMaxTextSize="@dimen/textsize12"
                android:text="2012.12.12"/>
            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/p_e_attitude_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_2dp"
                android:layout_marginBottom="@dimen/margin_3dp"
                android:textSize="@dimen/textsize7"
                android:maxLines="1"
                app:autoSizeTextType="uniform"
                app:autoSizeMaxTextSize="@dimen/textsize12"
                android:text="旷课"/>
        </LinearLayout>
    </RelativeLayout>


</android.support.v7.widget.CardView>