<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_height="match_parent">
    <com.yfy.view.SQToolBar style="@style/App_SQToolbar"/>
    <RelativeLayout
        android:id="@+id/p_e_main_top_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:layout_marginTop="@dimen/margin_50dp">
        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/p_e_main_user_head"
            android:layout_width="@dimen/margin_60dp"
            android:layout_height="@dimen/margin_60dp"
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true"
            android:src="@drawable/ic_parent_head"
            android:layout_marginLeft="@dimen/margin_10dp"
            android:layout_marginRight="@dimen/margin_10dp"/>
        <RelativeLayout
            android:id="@+id/p_e_main_grade_layout"
            android:layout_alignParentRight="true"
            android:background="@drawable/radius4_radio_group"
            android:layout_width="75dp"
            android:layout_marginRight="@dimen/margin_10dp"
            android:layout_marginBottom="@dimen/margin_5dp"
            android:layout_height="90dp">

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/p_e_user_grade_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="优"
                android:maxLines="1"
                android:gravity="center"
                android:textSize="@dimen/textsize18"
                app:autoSizeMinTextSize="@dimen/textsize16"
                app:autoSizeTextType="uniform"
                android:layout_marginTop="@dimen/margin_10dp"/>
            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/p_e_user_grade_sub"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="@dimen/margin_10dp"
                android:layout_below="@id/p_e_user_grade_title"
                android:text="95.5"
                android:gravity="center"
                android:maxLines="1"
                app:autoSizeTextType="uniform"
                android:textSize="@dimen/textsize20"
                app:autoSizeMinTextSize="@dimen/textsize16"
                android:layout_marginTop="@dimen/margin_5dp"/>

        </RelativeLayout>
        <RelativeLayout
            android:layout_toRightOf="@id/p_e_main_user_head"
            android:layout_width="wrap_content"
            android:layout_height="90dp"
            android:layout_toLeftOf="@id/p_e_main_grade_layout"
            android:layout_marginRight="@dimen/margin_5dp">
            <RelativeLayout
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/p_e_main_user_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="张三李四"
                    />
                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/p_e_main_user_class"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/p_e_main_user_name"
                    app:autoSizeMinTextSize="@dimen/textsize5"
                    app:autoSizeMaxTextSize="@dimen/textsize20"
                    android:maxLines="1"
                    android:gravity="center"
                    android:text="三年级二十五班" />
                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/p_e_main_user_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="升高asaadasda体重"
                    android:maxLines="1"
                    android:layout_below="@id/p_e_main_user_name"
                    android:layout_marginTop="@dimen/margin_5dp"
                    app:autoSizeTextType="uniform"
                    app:autoSizeMinTextSize="@dimen/textsize5"
                    />
            </RelativeLayout>

        </RelativeLayout>




    </RelativeLayout>
    <View
        android:id="@+id/p_e_main_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/p_e_main_top_layout"
        android:background="@color/MediumTurquoise"/>



    <RelativeLayout
        android:id="@+id/p_e_main_recipe_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="@dimen/margin_5dp"
        android:layout_marginBottom="@dimen/margin_5dp"
        >
        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/p_e_main_recipe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_10dp"
            android:layout_centerVertical="true"
            android:text="运动处方"
            android:ems="1"

            />
        <android.support.design.internal.FlowLayout
            android:id="@+id/p_e_main_recipe_flow_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_toRightOf="@id/p_e_main_recipe"
            android:layout_marginTop="@dimen/margin_5dp"
            android:layout_marginBottom="@dimen/margin_5dp"
            app:lineSpacing="@dimen/margin_3dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="@dimen/margin_10dp"
            android:foregroundGravity="center"
            />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/p_e_main_type_layout"
        android:layout_below="@id/p_e_main_line"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <android.support.v7.widget.RecyclerView
            android:id="@+id/p_e_main_type_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </android.support.v7.widget.RecyclerView>
    </RelativeLayout>



    <RelativeLayout
        android:layout_below="@id/p_e_main_type_layout"
        android:layout_above="@id/p_e_main_recipe_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/margin_2dp"
        android:background="@color/white">
        <com.yfy.charting_mp_test.charts.RadarChart
            android:id="@+id/stu_main_pie_test"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />
    </RelativeLayout>
</RelativeLayout>