<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/lib_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="@dimen/margin_50dp"
    android:paddingLeft="@dimen/margin_10dp"
    android:paddingRight="@dimen/margin_5dp"
    android:background="@color/white">

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/lib_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="1"
        tools:text="asd"
        android:textSize="@dimen/textsize8"
        android:layout_centerVertical="true"
        android:layout_marginTop="@dimen/margin_5dp"
        android:layout_marginBottom="@dimen/margin_5dp"
       />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/lib_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="2"
        android:ellipsize="end"
        app:autoSizeTextType="uniform"
        android:visibility="gone"
        tools:text="asd"
        android:layout_below="@id/lib_title"
        android:textSize="@dimen/textsize6"
        android:textColor="@color/gray_text"
        android:layout_marginBottom="@dimen/margin_5dp"
        />

    <android.support.v7.widget.AppCompatImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_arrow_right_gray_24dp"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"/>

</RelativeLayout>