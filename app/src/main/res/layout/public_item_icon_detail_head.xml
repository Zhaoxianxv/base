<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">



        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="@dimen/margin_90dp"
            android:layout_marginLeft="@dimen/margin_5dp"
            android:layout_marginTop="@dimen/margin_8dp"
            android:layout_marginRight="@dimen/margin_8dp"
            android:layout_marginBottom="@dimen/margin_8dp"
            app:cardCornerRadius="@dimen/margin_5dp"
            app:cardBackgroundColor="@color/white">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/p_e_atten_right_state"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/margin_25dp"
                        android:layout_alignParentRight="true"
                        android:gravity="center"
                        android:layout_marginRight="@dimen/margin_20dp"
                        android:text="记录人"
                        android:textColor="@color/a3_gray"/>
                    <TextView
                        android:id="@+id/p_e_atten_left_title"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/margin_25dp"
                        android:layout_marginLeft="@dimen/margin_10dp"
                        android:text="事由"
                        android:gravity="center"
                        android:textSize="@dimen/textsize9"/>
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.3dp"
                    android:background="@color/gray_tr"
                    android:layout_marginRight="@dimen/margin_10dp"
                    android:layout_marginLeft="@dimen/margin_10dp"
                    android:layout_marginTop="@dimen/margin_3dp"/>
                <TextView
                    android:id="@+id/p_e_atten_left_sub"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="时间··········课程"
                    android:textSize="@dimen/textsize5"
                    android:textColor="@color/oranges"
                    android:layout_marginTop="@dimen/margin_3dp"
                    android:layout_marginLeft="@dimen/margin_10dp"/>




                <com.yfy.view.multi.MultiPictureView
                    android:id="@+id/p_e_atten_item_multi"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="@dimen/margin_5dp"
                    android:layout_marginRight="@dimen/margin_5dp"
                    android:layout_marginBottom="@dimen/margin_5dp"
                    app:imageLayoutMode="STATIC"
                    app:max="9"
                    app:ratio="1"
                    app:space="6dp"
                    app:span="5"
                    />
            </LinearLayout>

        </androidx.cardview.widget.CardView>
    </RelativeLayout>


</LinearLayout>