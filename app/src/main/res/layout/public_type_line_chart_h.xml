<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/p_e_score_item_layout">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_5dp"
        android:layout_marginTop="@dimen/margin_8dp"
        android:layout_marginRight="@dimen/margin_8dp"
        android:layout_marginBottom="@dimen/margin_8dp"
        android:minHeight="@dimen/margin_45dp"
        app:cardCornerRadius="@dimen/margin_5dp"
        app:cardBackgroundColor="@color/white">

        <RelativeLayout
            android:layout_margin="@dimen/margin_5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/p_e_score_title"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/margin_20dp"
                android:layout_marginLeft="@dimen/margin_10dp"
                android:gravity="center_vertical"
                android:textSize="@dimen/textsize7"
                android:textStyle="bold"
                android:text="小结"
                android:layout_marginTop="@dimen/margin_3dp"/>

            <com.yfy.charting_mp.charts.LineChart
                android:id="@+id/p_e_score_line_chart"
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin_150dp"
                android:layout_below="@+id/p_e_score_title" />
        </RelativeLayout>

    </androidx.cardview.widget.CardView>


</LinearLayout>