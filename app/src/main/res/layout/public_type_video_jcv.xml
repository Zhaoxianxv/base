<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/public_type_video_jvc_name"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/margin_20dp"
        android:layout_marginLeft="@dimen/margin_10dp"
        android:gravity="center_vertical"
        android:textSize="@dimen/textsize7"
        android:textStyle="bold"
        android:visibility="invisible"
        android:text="小结"
        android:layout_marginTop="@dimen/margin_3dp"/>

    <com.yfy.video_jcv.JCVideoPlayerStandard
        android:id="@+id/public_type_video_jvc_play"
        android:layout_below="@id/public_type_video_jvc_name"
        android:layout_width="match_parent"
        android:layout_height="200dp" />
</RelativeLayout>